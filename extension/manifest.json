{
  "manifest_version": 3,
  "name": "MyImmersive MVP",
  "version": "1.0",
  "description": "沉浸式翻译 MVP 版本",
  "permissions": ["activeTab"],
  "host_permissions": ["http://localhost:8080/*"],
  "action": {
    "default_title": "开始翻译"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
