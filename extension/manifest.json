{
  "manifest_version": 3,
  "name": "MyImmersive",
  "version": "1.1",
  "description": "沉浸式翻译 - 智能网页翻译工具",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://localhost:8080/*", "http://*/*", "https://*/*"],
  "action": {
    "default_title": "MyImmersive 设置",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
